.slider{
  widows: 650rpx;
  margin: 40rpx auto;
}

.task_text {
  height: 120rpx;
  margin: 40rpx auto;
  text-align: center;
}
.task_text .task_title {
  font-size:35rpx;
  height: 70rpx;
  line-height: 70rpx;
}
.task_text .task_desc {
  font-size: 30rpx;
  height: 50rpx;
  line-height: 50rpx;
  color: #999999;
}

.task_cate {
  width: 660rpx;
  margin: 0 auto;
  display: flex;
  flex-wrap: wrap;
}
.task_cate .cate_item {
  width: 220rpx;
  height: 130rpx;
  text-align: center;
  margin-bottom: 50rpx;

}
.task_cate .cate_item .cate_icon {
  height: 70rpx;
}
.task_cate .cate_item .cate_icon image {
  width: 50rpx;
  height: 50rpx;
}

.task_cate .cate_item .cate_text {
  height: 60rpx;
  line-height: 60rpx;
  font-size: 30rpx;
}
/* 激活图标 */
.task_cate .cate_item .text_active {
  color: #E7624F;
  
  
}

.start {
  width: 280rpx;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;

  margin: 40rpx auto;
  border: 2rpx solid #E7624F;
  color: #E7624F;
  border-radius: 20rpx;
}


.clock {
  height: 3000rpx;
  background:#E7624F;
  overflow: hidden;
}

.progress{
  width: 400rpx;
  height: 400rpx;
  background: orange;
  margin: 140rpx auto;
  position: relative;
}

.progress .progress_bg,.progress .progress_active{
  position: absolute;
  left: 0;
  top: 0;

  width: 400rpx;
  
}
.progress .progress_text {
  width: 160rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 35rpx;
  color: white;
  position: absolute;
  left:120rpx;
  top:170rpx;
  text-align: center;
}

.btns .ok,.btns .pauseBtn,.btns .continue,.btns .cancelBtn {
  width: 280rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  color: #ffffff;
  border: 3rpx solid #ffffff;
  border-radius: 20rpx;
  margin: 0 auto 20rpx auto;
}